<%- include('includes/head'); %>
  <%- include('includes/nav'); %>
    <!-- Section: Design Block -->
    <section class="text-center text-lg-start">
      <style>
        .cascading-right {
          margin-right: -50px;
        }

        @media (max-width: 991.98px) {
          .cascading-right {
            margin-right: 0;
          }
        }
      </style>

      <!-- Jumbotron -->
      <div class="container py-4">
        <div class="row g-0 align-items-center">
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
              <div class="card-body p-5 shadow-5 text-center">
                <h2 class="fw-bold mb-5">Fazer Login</h2>
                <%- include('includes/messages'); %>
                <form action="/entrar" method="POST">
                  <!-- 2 column grid layout with text inputs for the first and last names -->
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">


                  <!-- Email input -->
                  <div class="form-outline mb-4" data-mdb-input-init>
                    <input type="email" class="form-control" name="email" />
                    <label class="form-label" for="form3Example3">Endereço de Email</label>
                  </div>

                  <!-- Password input -->
                  <div class="form-outline mb-4" data-mdb-input-init>
                    <input type="password" class="form-control" name="senha" />
                    <label class="form-label" for="form3Example4">Senha</label>
                  </div>



                  <!-- Submit button -->
                  <button type="submit" class="btn btn-primary btn-block mb-4">
                    Entrar
                  </button>

                  <p> Ainda não tem uma conta? <a href="/registrar">Registre-se</a></p>
                </form>
              </div>
            </div>
          </div>

          <div class="col-lg-6 mb-5 mb-lg-0">
            <img src="assets/image/peakpx.jpg" class="w-100 rounded-4 shadow-4" alt="" />
          </div>
        </div>
      </div>
      <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->

    <%- include('includes/footer'); %>